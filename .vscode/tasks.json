{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: package (skip tests)",
      "type": "shell",
      "command": ".\\mvnw.cmd",
      "args": ["-DskipTests", "package"],
      "options": {
        "cwd": "${workspaceFolder}/korea-music-chart-api"
      },
      "problemMatcher": []
    },
    {
      "label": "backend: run (spring-boot)",
      "type": "shell",
      "command": ".\\mvnw.cmd",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/korea-music-chart-api"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "frontend: dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
